<Window x:Class="Bolnica.view.SekretarView.Obavestenja.PogledajObavestenje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.view.SekretarView.Obavestenja"
        mc:Ignorable="d"
        Title="Obaveštenje" Height="400" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Label x:Name="datumIVremeObavestenja" Grid.Row="0" VerticalAlignment="Center">Datum i vreme objavljivanja:</Label>
        <TextBlock x:Name="naslov" Grid.Row="1" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="5">Naslov</TextBlock>
        <TextBlock x:Name="sadrzaj" Grid.Row="2" FontSize="14" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Justify" TextWrapping="Wrap" Margin="10">Sadrzaj</TextBlock>
        <Button Grid.Row="3" x:Name="otkazi" Click="otkazi_Click" Width="100" Margin="15">Otkaži</Button>
    </Grid>
</Window>
